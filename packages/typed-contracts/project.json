{
  "name": "typed-contracts",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/typed-contracts/src",
  "projectType": "library",
  "targets": {
    "pack": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/typepack.mjs --package typed-contracts"
      },
      "dependsOn": ["build"]
    },
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/typed-contracts",
        "main": "packages/typed-contracts/src/index.ts",
        "tsConfig": "packages/typed-contracts/tsconfig.lib.json",
        "assets": [],
        "project": "packages/typed-contracts/package.json",
        "compiler": "swc",
        "format": ["cjs", "esm"]
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs typed-contracts --rename={args.rename}"
      },
      "dependsOn": ["pack"],
      "configurations": {
        "canary": {
          "args": "--rename=canary"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/typed-contracts/**/*.ts",
          "packages/typed-contracts/package.json"
        ]
      }
    },
    "size": {
      "executor": "./tools/executors/size-limit:size-limit",
      "options": {
        "limit": "0.6 kB",
        "outputPath": "dist/packages/typed-contracts"
      },
      "dependsOn": ["build"]
    }
  },
  "tags": []
}

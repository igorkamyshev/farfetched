{
  "name": "dev-tools",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/dev-tools/src",
  "projectType": "library",
  "targets": {
    "pack": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/typepack.mjs --package dev-tools --typings index.d.ts"
      },
      "dependsOn": ["build"]
    },
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/dev-tools"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs dev-tools --rename={args.rename}"
      },
      "dependsOn": ["pack"],
      "configurations": {
        "canary": {
          "args": "--rename=canary"
        }
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/dev-tools"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/dev-tools/**/*.ts",
          "packages/dev-tools/package.json"
        ]
      }
    }
  },
  "tags": []
}

{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/dev-tools/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/dev-tools",
        "main": "packages/dev-tools/src/index.ts",
        "tsConfig": "packages/dev-tools/tsconfig.lib.json",
        "assets": ["packages/dev-tools/*.md"]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/dev-tools/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/dev-tools"],
      "options": {
        "jestConfig": "packages/dev-tools/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "typetest": {
      "executor": "./tools/executors/tsd:tsd",
      "inputs": ["{projectRoot}/**/*.type_spec.ts", "{projectRoot}/**/*.ts"]
    }
  },
  "tags": []
}
